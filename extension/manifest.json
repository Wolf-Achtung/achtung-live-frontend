{
  "manifest_version": 3,
  "name": "achtung.live - Privacy Guard",
  "version": "1.0.0",
  "description": "Der Airbag für digitale Kommunikation. Prüft Texte auf sensible Daten bevor du sie sendest.",
  "author": "achtung.live",
  "homepage_url": "https://achtung.live",

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "achtung.live Privacy Guard"
  },

  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],

  "host_permissions": [
    "https://achtung.live/*",
    "https://*.netlify.app/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content-styles.css"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
